{

  "compilerOptions": {

    // ... outras configurações

    "baseUrl": ".", // Importante: define o ponto de partida para os caminhos

    "paths": {

      // Este atalho mapeia "@/*" (como '@/utils/...') para "src/*" (como 'src/utils/...')

      "@/*": [

        "./src/*"

      ]

    },

    "target": "ES2017",

    "lib": [

      "dom",

      "dom.iterable",

      "esnext"

    ],

    "allowJs": true,

    "skipLibCheck": true,

    "strict": false,

    "noEmit": true,

    "incremental": true,

    "module": "esnext",

    "esModuleInterop": true,

    "moduleResolution": "node",

    "resolveJsonModule": true,

    "isolatedModules": true,

    "jsx": "preserve",

    "plugins": [

      {

        "name": "next"

      }

    ]

  },

  "include": [

    "next-env.d.ts",

    ".next/types/**/*.ts",

    "**/*.ts",

    "**/*.tsx"

  ],

  "exclude": [

    "node_modules"

  ]

  // ...

}